generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int      @id @default(autoincrement())
  dni             String   @unique
  roleId          Int
  createdAt       DateTime @default(now())
  email           String? @unique  @db.VarChar(255)
  license         String?
  password        String? @db.VarChar(255)
  updatedAt       DateTime @updatedAt
  profile         Profile?
  assignedStudies Study[]  @relation("StudyBiochemist")
  patientStudies  Study[]  @relation("StudyPatient")
  role            Role     @relation(fields: [roleId], references: [id])

  @@index([roleId])
  @@index([dni])
}

model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]
}

model Profile {
  id        Int       @id @default(autoincrement())
  firstName String    @db.VarChar(100)
  lastName  String    @db.VarChar(100)
  userId    Int       @unique
  birthDate DateTime?
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Study {
  id              Int      @id @default(autoincrement())
  userId          Int
  studyName       String   @db.VarChar(255)
  studyDate       DateTime?
  socialInsurance String?  @db.VarChar(50)
  doctor          String?  @db.VarChar(255)
  pdfUrl          String?  @db.VarChar(500)
  statusId        Int
  createdAt       DateTime @default(now())
  biochemistId    Int?
  updatedAt       DateTime @default(now()) @updatedAt
  biochemist      User?    @relation("StudyBiochemist", fields: [biochemistId], references: [id])
  status          Status   @relation(fields: [statusId], references: [id])
  patient         User     @relation("StudyPatient", fields: [userId], references: [id], onDelete: Cascade)
  attachments     StudyAttachment[]

  @@index([userId])
  @@index([biochemistId])
  @@index([statusId])
  @@index([studyDate])
}

model Status {
  id      Int     @id @default(autoincrement())
  name    String  @unique
  studies Study[]
}

model StudyAttachment {
  id        Int      @id @default(autoincrement())
  studyId   Int
  url       String   @db.VarChar(500)
  filename  String?  @db.VarChar(255)
  createdAt DateTime @default(now())

  study     Study    @relation(fields: [studyId], references: [id], onDelete: Cascade)

  @@index([studyId])
}
